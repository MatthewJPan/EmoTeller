<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:weightSum="1"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="0.15"
            android:text="Microsoft will receive the images you upload and may use them to improve Emotion API and related services. By submitting an image, you confirm that you have consent from everyone in it." />

        <FrameLayout
            android:id="@+id/camera_preview"
            android:layout_width="250dp"
            android:layout_height="0dp"
            android:layout_weight="0.55"
            android:layout_gravity="center"
            android:layout_marginTop="5dp" />

        <ImageView
            android:layout_width="103dp"
            android:layout_height="0dp"
            android:layout_weight="0.055"
            android:layout_marginTop="8dp"
            android:layout_gravity="center"
            android:id="@+id/imageView" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="0.245"
            android:layout_marginTop="5dp"
            android:weightSum="1"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.6"
                android:inputType="textMultiLine"
                android:layout_alignParentTop="true"
                android:text="   Result   \n"
                android:background="#ffffff"
                android:ems="10"
                android:maxLines="20"
                android:scrollbars="vertical"
                android:id="@+id/textResult" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.4"
                android:weightSum="1"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true">

                <Button
                    android:id="@+id/button_capture"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Start"
                    android:onClick="onStartClicked" />

                <Button
                    android:id="@+id/button_stop"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Stop"
                    android:onClick="onStopClicked" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
